<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_500"
    android:orientation="vertical" >
    
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue_500"
        android:orientation="horizontal" >
        
		<ImageView
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginLeft="10dp"
		    android:src="@drawable/logoretocado" />
		
		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:gravity="center_vertical"
		    android:layout_marginLeft="20dp"
		    android:text="@string/tvTitle"
		    android:textColor="@color/white"
		    android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imgNegocio"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:src="@drawable/elpostino2"
            android:scaleType="fitXY" />
        
        <TextView
            android:id="@+id/tvNegocioTitulo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
			android:layout_marginLeft="15dp"
            android:text="@string/tvRazonSocial1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold" />
		
	</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:layout_margin="30dp"
        android:paddingLeft="15dp"
        android:orientation="vertical"		
        android:background="@drawable/borde_izquierdo" >
    
        <TextView
            android:id="@+id/tvNegocioNombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/tvRazonSocial2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="left" />
		
		<TextView
		    android:id="@+id/tvDescripcion"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvLocalidad"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/white"
		    android:gravity="left" />
		
		<TextView
		    android:id="@+id/tvDireccion"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvDireccion"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/white"
		    android:textStyle="bold"
		    android:gravity="left" />
		
		<TextView
		    android:id="@+id/tvTelefono"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvTelefono"
		    android:textAppearance="?android:attr/textAppearanceMedium" 
		    android:textColor="@color/white"
		    android:textStyle="bold"
		    android:gravity="left" />
		
		<TextView
		    android:id="@+id/tvHorarios"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvHorario2"
		    android:textAppearance="?android:attr/textAppearanceMedium" 
		    android:textColor="@color/white"
		    android:textStyle="bold"
		    android:gravity="left" />
		
    </LinearLayout>
        
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="80dp"         
         android:gravity="center" >

         <Button
             android:id="@+id/btnRegresar"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"             
             android:text="@string/btnRegresar"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:background="@color/red_300"
             android:onClick="onRegresarClick" />

         <Button
             android:id="@+id/btnLlamar"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"
             android:text="@string/btnLlamar"             
             android:textColor="@color/white"
             android:textStyle="bold"
             android:background="@color/red_300"
             android:onClick="onLlamarClick" />
         
         <Button             
             android:id="@+id/btnMapa"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"
             android:text="@string/btnMapa"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:background="@color/red_300"
             android:onClick="onMapaClick" />

     </LinearLayout>
     
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:background="@color/blue_500" >
    </LinearLayout>

</LinearLayout>
